{
    "$schema": "https://opencode.ai/config.json",
    "theme": "catppuccin",
    "disabled_providers": ["openai", "mistral", "requesty"],
    "mcp": {
        "Context7": {
            "enabled": true,
            "type": "local",
            "command": ["npx", "-y", "@upstash/context7-mcp"]
        },
        "sequential-thinking": {
            "enabled": true,
            "type": "local",
            "command": ["npx",
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "tavily": {
            "enabled": true,
            "type": "local",
            "command": ["npx", "-y", "tavily-mcp@latest"]
        }
    }
}
